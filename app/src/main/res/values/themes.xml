<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Todoprototype" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="android:windowBackground">@color/white_neutral</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="popupMenuBackground">@color/white_darkened</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="checkboxStyle">@style/Widget.App.Checkbox</item>
    </style>

    <style name="Theme.Todoprototype" parent="Base.Theme.Todoprototype" />

    <!-- Active Indicator Styling -->
    <style name="Widget.App.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black_alpha20</item>
    </style>

    <!-- Bottom Navigation Styling -->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white_neutral</item>
        <item name="colorSurfaceContainer">@color/white_darkened</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <!-- Top App Bar Styling -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Date Styling -->
    <style name="Widget.App.DateDisplay" parent="Widget.AppCompat.TextView">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="drawableStartCompat">@drawable/ic_today</item>
        <item name="drawableTint">@color/gray</item>
    </style>

    <!-- FAB Styling -->
    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/black</item>
        <item name="colorOnContainer">@color/white</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <!-- CheckBox Styling-->
    <style name="Widget.App.Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

</resources>